
@model ogrenci

<div class="container m-4">
    <div class="card mx-auto" style="width:500px;">
        <div class="card-header">
            Başvuru Formu
        </div>
        <div class="card-body">
            <form asp-action="uygulama" method="POST">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Adınız</label>
                    <input asp-for="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Email">Eposta</label>
                    <input asp-for="Email" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Telefon</label>
                    <input asp-for="Phone" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Confirm">Kursa katılacak mısınız?</label>
                    <select asp-for="Confirm" class="form-control">
                        <option value="">Seçiniz</option>
                        <option value="true">Evet, geliyorum</option>
                        <option value="false">Hayır, gelmiyorum</option>
                    </select>
                </div>

                <input type="submit" value="Submit" class="btn btn-primary btn-block">
            </form>
        </div>
    </div>
</div>

