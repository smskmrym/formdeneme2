@model ogrenci

@{ ViewData["Title"] = "tesekkur"; }

<h1>Teşekkürler</h1>
<div class="container m-4">
    <div class="card mx-auto" style="width:500px;">
        <div class="card-header">
            Merhaba, @Model.Name
        </div>
        <div class="card-body">
            @if (Model.Confirm == true)
            {
<span>Kursa katılmış olduğunuzdan dolayı mutlu olduk.</span>
                <div>
                    Diğer katılımcıları <a asp-action="liste"> görüntüle.</a>
                </div> }
                            else
                            {
                <span>Üzüldük. Umarım fikriniz değişir.</span>}
        </div>
    </div>
</div>
